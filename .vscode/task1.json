{
   "version": "2.0.0",
   "command": "gcc",
    "args": ["-g","${file}","-o","${fileDirname}\\${fileBasenameNoExtension}.exe"],
    "problemMatcher": {
        "owner": "cppdbg",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }  
    
}
